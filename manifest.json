{
  "manifest_version": 3,
  "name": "WebRTC File Sharing",
  "version": "1.0",
  "description": "A Chrome extension for file sharing using WebRTC.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "host_permissions": [
    "ws://localhost:8080/*",
    "wss://localhost:8080/*"
  ]
}