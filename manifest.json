{
    "manifest_version": 3,
    "name": "WebRTC File Transfer",
    "version": "1.0",
    "description": "A Chrome extension for peer-to-peer file transfer using WebRTC.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}